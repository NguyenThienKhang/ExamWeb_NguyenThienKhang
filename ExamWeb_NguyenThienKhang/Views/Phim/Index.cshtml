@model List<Phim>
<partial name="_Notification" />
<div class="row">
    <div class="col-md-6">
        <h2>LIST Phim</h2>
    </div>
    <div class="col-md-6 text-right">
        <a asp-action="Add" class="btn btn-primary">
            <i class="bi bi-plus-circle-fill"></i> Add New
        </a>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Tựa đề</th>
            <th>Thể loại</th>
            <th> Giá Vé </th>
            <th> Thời lượng </th>
            <th> Action </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
        <tr>
            <td>@x.TuaDe</td>
            <td>@(x.TrongNuoc?"Trong nước":"Người nước")</td>
            <td>@String.Format("{0:n0} ₫",x.GiaVe)</td>
            <td>@x.ThoiLuong</td>

            <td>
                <a asp-action="Update" asp-route-id="@x.Id" class="btn btn-success">
                    <i class="bi bi-pencil-square"></i> Edit
                </a>
                <a asp-action="Delete" asp-route-id="@x.Id" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>
