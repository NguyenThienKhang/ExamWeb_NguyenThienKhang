@model Phim
<form asp-action="Update" method="post">
    <input type="hidden" asp-for="Id" />
    <h2>Cập nhật thông tin Phim</h2>
    <hr />
    <div class="form-group">
        <label>Tựa đề</label>
        <input asp-for="TuaDe" class="form-control" />
        <span asp-validation-for="TuaDe" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Diễn viên</label>
        <input asp-for="DienVien" class="form-control" />
        <span asp-validation-for="DienVien" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="theloai">Thể loại</label>
        <select id="theloai" asp-for="DienVien" class="form-control">
            <option value="trongnuoc">Trong nước</option>
            <option value="nuocngoai">Nước ngoài</option>
        </select>
        <span asp-validation-for="DienVien" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Thời lượng</label>
        <input asp-for="ThoiLuong" class="form-control" />
        <span asp-validation-for="ThoiLuong" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Gía vé</label>
        <input asp-for="GiaVe" class="form-control" />
        <span asp-validation-for="GiaVe" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary"> Update </button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>